<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popwindow_delete_anim_style">
        <item name="android:windowEnterAnimation">@anim/delete_btn_show</item>
        <item name="android:windowExitAnimation">@anim/delete_btn_hide</item>
    </style>

    <declare-styleable name="DownloadProgressView">
        <attr name="circleRadius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="progressDuration" format="integer"/>
        <attr name="resultDuration" format="integer"/>
        <attr name="progressBackgroundColor" format="color"/>
        <attr name="drawingColor" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="circleBackgroundColor" format="color"/>
        <attr name="overshootValue" format="float"/>
    </declare-styleable>
</resources>
